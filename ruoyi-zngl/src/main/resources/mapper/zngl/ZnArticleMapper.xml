<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.zngl.mapper.ZnArticleMapper">
    
    <resultMap type="ZnArticle" id="ZnArticleResult">
        <result property="id"    column="id"    />
        <result property="title"    column="title"    />
        <result property="content"    column="content"    />
        <result property="author"    column="author"    />
        <result property="category"    column="category"    />
        <result property="coverImageUrl"    column="cover_image_url"    />
        <result property="views"    column="views"    />
        <result property="publishStatus"    column="publish_status"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectZnArticleVo">
        select id, title, content, author, category, cover_image_url, views, publish_status, create_time, update_time, remark from zn_article
    </sql>

    <select id="selectZnArticleList" parameterType="ZnArticle" resultMap="ZnArticleResult">
        <include refid="selectZnArticleVo"/>
        <where>  
            <if test="title != null  and title != ''"> and title = #{title}</if>
            <if test="author != null  and author != ''"> and author = #{author}</if>
            <if test="category != null  and category != ''"> and category = #{category}</if>
            <if test="publishStatus != null  and publishStatus != ''"> and publish_status = #{publishStatus}</if>
        </where>
    </select>
    
    <select id="selectZnArticleById" parameterType="Long" resultMap="ZnArticleResult">
        <include refid="selectZnArticleVo"/>
        where id = #{id}
    </select>

    <insert id="insertZnArticle" parameterType="ZnArticle" useGeneratedKeys="true" keyProperty="id">
        insert into zn_article
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">title,</if>
            <if test="content != null and content != ''">content,</if>
            <if test="author != null">author,</if>
            <if test="category != null">category,</if>
            <if test="coverImageUrl != null">cover_image_url,</if>
            <if test="views != null">views,</if>
            <if test="publishStatus != null">publish_status,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">#{title},</if>
            <if test="content != null and content != ''">#{content},</if>
            <if test="author != null">#{author},</if>
            <if test="category != null">#{category},</if>
            <if test="coverImageUrl != null">#{coverImageUrl},</if>
            <if test="views != null">#{views},</if>
            <if test="publishStatus != null">#{publishStatus},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateZnArticle" parameterType="ZnArticle">
        update zn_article
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="content != null and content != ''">content = #{content},</if>
            <if test="author != null">author = #{author},</if>
            <if test="category != null">category = #{category},</if>
            <if test="coverImageUrl != null">cover_image_url = #{coverImageUrl},</if>
            <if test="views != null">views = #{views},</if>
            <if test="publishStatus != null">publish_status = #{publishStatus},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteZnArticleById" parameterType="Long">
        delete from zn_article where id = #{id}
    </delete>

    <delete id="deleteZnArticleByIds" parameterType="String">
        delete from zn_article where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>