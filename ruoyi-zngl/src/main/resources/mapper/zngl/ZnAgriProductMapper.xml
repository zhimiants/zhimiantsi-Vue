<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.zngl.mapper.ZnAgriProductMapper">
    
    <resultMap type="ZnAgriProduct" id="ZnAgriProductResult">
        <result property="id"    column="id"    />
        <result property="sellerId"    column="seller_id"    />
        <result property="name"    column="name"    />
        <result property="description"    column="description"    />
        <result property="imageUrl"    column="image_url"    />
        <result property="price"    column="price"    />
        <result property="stock"    column="stock"    />
        <result property="unit"    column="unit"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectZnAgriProductVo">
        select id, seller_id, name, description, image_url, price, stock, unit, status, create_time, update_time, remark from zn_agri_product
    </sql>

    <select id="selectZnAgriProductList" parameterType="ZnAgriProduct" resultMap="ZnAgriProductResult">
        <include refid="selectZnAgriProductVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="price != null "> and price = #{price}</if>
            <if test="stock != null "> and stock = #{stock}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectZnAgriProductById" parameterType="Long" resultMap="ZnAgriProductResult">
        <include refid="selectZnAgriProductVo"/>
        where id = #{id}
    </select>

    <insert id="insertZnAgriProduct" parameterType="ZnAgriProduct" useGeneratedKeys="true" keyProperty="id">
        insert into zn_agri_product
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="sellerId != null">seller_id,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="description != null">description,</if>
            <if test="imageUrl != null">image_url,</if>
            <if test="price != null">price,</if>
            <if test="stock != null">stock,</if>
            <if test="unit != null">unit,</if>
            <if test="status != null">status,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="sellerId != null">#{sellerId},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="description != null">#{description},</if>
            <if test="imageUrl != null">#{imageUrl},</if>
            <if test="price != null">#{price},</if>
            <if test="stock != null">#{stock},</if>
            <if test="unit != null">#{unit},</if>
            <if test="status != null">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateZnAgriProduct" parameterType="ZnAgriProduct">
        update zn_agri_product
        <trim prefix="SET" suffixOverrides=",">
            <if test="sellerId != null">seller_id = #{sellerId},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="description != null">description = #{description},</if>
            <if test="imageUrl != null">image_url = #{imageUrl},</if>
            <if test="price != null">price = #{price},</if>
            <if test="stock != null">stock = #{stock},</if>
            <if test="unit != null">unit = #{unit},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteZnAgriProductById" parameterType="Long">
        delete from zn_agri_product where id = #{id}
    </delete>

    <delete id="deleteZnAgriProductByIds" parameterType="String">
        delete from zn_agri_product where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>