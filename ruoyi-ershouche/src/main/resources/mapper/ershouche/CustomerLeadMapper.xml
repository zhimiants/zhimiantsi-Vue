<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.ershouche.mapper.CustomerLeadMapper">
    
    <resultMap type="CustomerLead" id="CustomerLeadResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="phone"    column="phone"    />
        <result property="source"    column="source"    />
        <result property="intendedCarInfo"    column="intended_car_info"    />
        <result property="budget"    column="budget"    />
        <result property="followUpStatus"    column="follow_up_status"    />
        <result property="salespersonUserId"    column="salesperson_user_id"    />
        <result property="gender"    column="gender"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <resultMap id="CustomerLeadLeadFollowUpResult" type="CustomerLead" extends="CustomerLeadResult">
        <collection property="leadFollowUpList" ofType="LeadFollowUp" column="id" select="selectLeadFollowUpList" />
    </resultMap>

    <resultMap type="LeadFollowUp" id="LeadFollowUpResult">
        <result property="id"    column="id"    />
        <result property="leadId"    column="lead_id"    />
        <result property="followUpTime"    column="follow_up_time"    />
        <result property="followUpMethod"    column="follow_up_method"    />
        <result property="content"    column="content"    />
        <result property="nextFollowUpTime"    column="next_follow_up_time"    />
        <result property="outcomeStatus"    column="outcome_status"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectCustomerLeadVo">
        select id, name, phone, source, intended_car_info, budget, follow_up_status, salesperson_user_id, gender, create_time, update_time, remark from tb_customer_lead
    </sql>

    <select id="selectCustomerLeadList" parameterType="CustomerLead" resultMap="CustomerLeadResult">
        <include refid="selectCustomerLeadVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="phone != null  and phone != ''"> and phone = #{phone}</if>
            <if test="followUpStatus != null  and followUpStatus != ''"> and follow_up_status = #{followUpStatus}</if>
            <if test="salespersonUserId != null "> and salesperson_user_id like concat('%', #{salespersonUserId}, '%')</if>
        </where>
    </select>
    
    <select id="selectCustomerLeadById" parameterType="Long" resultMap="CustomerLeadLeadFollowUpResult">
        select id, name, phone, source, intended_car_info, budget, follow_up_status, salesperson_user_id, gender, create_time, update_time, remark
        from tb_customer_lead
        where id = #{id}
    </select>

    <select id="selectLeadFollowUpList" resultMap="LeadFollowUpResult">
        select id, lead_id, follow_up_time, follow_up_method, content, next_follow_up_time, outcome_status, create_time, update_time, remark
        from tb_lead_follow_up
        where lead_id = #{lead_id}
    </select>

    <insert id="insertCustomerLead" parameterType="CustomerLead" useGeneratedKeys="true" keyProperty="id">
        insert into tb_customer_lead
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="phone != null">phone,</if>
            <if test="source != null">source,</if>
            <if test="intendedCarInfo != null">intended_car_info,</if>
            <if test="budget != null">budget,</if>
            <if test="followUpStatus != null">follow_up_status,</if>
            <if test="salespersonUserId != null">salesperson_user_id,</if>
            <if test="gender != null">gender,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="phone != null">#{phone},</if>
            <if test="source != null">#{source},</if>
            <if test="intendedCarInfo != null">#{intendedCarInfo},</if>
            <if test="budget != null">#{budget},</if>
            <if test="followUpStatus != null">#{followUpStatus},</if>
            <if test="salespersonUserId != null">#{salespersonUserId},</if>
            <if test="gender != null">#{gender},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateCustomerLead" parameterType="CustomerLead">
        update tb_customer_lead
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="source != null">source = #{source},</if>
            <if test="intendedCarInfo != null">intended_car_info = #{intendedCarInfo},</if>
            <if test="budget != null">budget = #{budget},</if>
            <if test="followUpStatus != null">follow_up_status = #{followUpStatus},</if>
            <if test="salespersonUserId != null">salesperson_user_id = #{salespersonUserId},</if>
            <if test="gender != null">gender = #{gender},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCustomerLeadById" parameterType="Long">
        delete from tb_customer_lead where id = #{id}
    </delete>

    <delete id="deleteCustomerLeadByIds" parameterType="String">
        delete from tb_customer_lead where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
    <delete id="deleteLeadFollowUpByLeadIds" parameterType="String">
        delete from tb_lead_follow_up where lead_id in 
        <foreach item="leadId" collection="array" open="(" separator="," close=")">
            #{leadId}
        </foreach>
    </delete>

    <delete id="deleteLeadFollowUpByLeadId" parameterType="Long">
        delete from tb_lead_follow_up where lead_id = #{leadId}
    </delete>

    <insert id="batchLeadFollowUp">
        insert into tb_lead_follow_up( id, lead_id, follow_up_time, follow_up_method, content, next_follow_up_time, outcome_status, create_time, update_time, remark) values
        <foreach item="item" index="index" collection="list" separator=",">
            ( #{item.id}, #{item.leadId}, #{item.followUpTime}, #{item.followUpMethod}, #{item.content}, #{item.nextFollowUpTime}, #{item.outcomeStatus}, #{item.createTime}, #{item.updateTime}, #{item.remark})
        </foreach>
    </insert>
</mapper>