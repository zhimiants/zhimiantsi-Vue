<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.ershouche.mapper.LeadFollowUpMapper">
    
    <resultMap type="LeadFollowUp" id="LeadFollowUpResult">
        <result property="id"    column="id"    />
        <result property="leadId"    column="lead_id"    />
        <result property="followUpTime"    column="follow_up_time"    />
        <result property="followUpMethod"    column="follow_up_method"    />
        <result property="content"    column="content"    />
        <result property="nextFollowUpTime"    column="next_follow_up_time"    />
        <result property="outcomeStatus"    column="outcome_status"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectLeadFollowUpVo">
        select id, lead_id, follow_up_time, follow_up_method, content, next_follow_up_time, outcome_status, create_time, update_time, remark from tb_lead_follow_up
    </sql>

    <select id="selectLeadFollowUpList" parameterType="LeadFollowUp" resultMap="LeadFollowUpResult">
        <include refid="selectLeadFollowUpVo"/>
        <where>  
            <if test="leadId != null "> and lead_id = #{leadId}</if>
            <if test="followUpTime != null "> and follow_up_time = #{followUpTime}</if>
            <if test="followUpMethod != null  and followUpMethod != ''"> and follow_up_method = #{followUpMethod}</if>
            <if test="outcomeStatus != null  and outcomeStatus != ''"> and outcome_status = #{outcomeStatus}</if>
        </where>
    </select>
    
    <select id="selectLeadFollowUpById" parameterType="Long" resultMap="LeadFollowUpResult">
        <include refid="selectLeadFollowUpVo"/>
        where id = #{id}
    </select>

    <insert id="insertLeadFollowUp" parameterType="LeadFollowUp" useGeneratedKeys="true" keyProperty="id">
        insert into tb_lead_follow_up
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="leadId != null">lead_id,</if>
            <if test="followUpTime != null">follow_up_time,</if>
            <if test="followUpMethod != null">follow_up_method,</if>
            <if test="content != null">content,</if>
            <if test="nextFollowUpTime != null">next_follow_up_time,</if>
            <if test="outcomeStatus != null">outcome_status,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="leadId != null">#{leadId},</if>
            <if test="followUpTime != null">#{followUpTime},</if>
            <if test="followUpMethod != null">#{followUpMethod},</if>
            <if test="content != null">#{content},</if>
            <if test="nextFollowUpTime != null">#{nextFollowUpTime},</if>
            <if test="outcomeStatus != null">#{outcomeStatus},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateLeadFollowUp" parameterType="LeadFollowUp">
        update tb_lead_follow_up
        <trim prefix="SET" suffixOverrides=",">
            <if test="leadId != null">lead_id = #{leadId},</if>
            <if test="followUpTime != null">follow_up_time = #{followUpTime},</if>
            <if test="followUpMethod != null">follow_up_method = #{followUpMethod},</if>
            <if test="content != null">content = #{content},</if>
            <if test="nextFollowUpTime != null">next_follow_up_time = #{nextFollowUpTime},</if>
            <if test="outcomeStatus != null">outcome_status = #{outcomeStatus},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteLeadFollowUpById" parameterType="Long">
        delete from tb_lead_follow_up where id = #{id}
    </delete>

    <delete id="deleteLeadFollowUpByIds" parameterType="String">
        delete from tb_lead_follow_up where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>