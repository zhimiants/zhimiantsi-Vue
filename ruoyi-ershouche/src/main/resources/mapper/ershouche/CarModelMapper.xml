<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.ershouche.mapper.CarModelMapper">
    
    <resultMap type="CarModel" id="CarModelResult">
        <result property="id"    column="id"    />
        <result property="brandId"    column="brand_id"    />
        <result property="name"    column="name"    />
        <result property="sortOrder"    column="sort_order"    />
        <result property="bodyType"    column="body_type"    />
        <result property="productionStatus"    column="production_status"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectCarModelVo">
        select id, brand_id, name, sort_order, body_type, production_status, create_time, update_time, remark from tb_car_model
    </sql>

    <select id="selectCarModelList" parameterType="CarModel" resultMap="CarModelResult">
        <include refid="selectCarModelVo"/>
        <where>  
            <if test="brandId != null "> and brand_id = #{brandId}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="bodyType != null  and bodyType != ''"> and body_type = #{bodyType}</if>
            <if test="productionStatus != null  and productionStatus != ''"> and production_status = #{productionStatus}</if>
        </where>
    </select>
    
    <select id="selectCarModelById" parameterType="Long" resultMap="CarModelResult">
        <include refid="selectCarModelVo"/>
        where id = #{id}
    </select>

    <insert id="insertCarModel" parameterType="CarModel" useGeneratedKeys="true" keyProperty="id">
        insert into tb_car_model
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="brandId != null">brand_id,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="sortOrder != null">sort_order,</if>
            <if test="bodyType != null">body_type,</if>
            <if test="productionStatus != null">production_status,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="brandId != null">#{brandId},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="sortOrder != null">#{sortOrder},</if>
            <if test="bodyType != null">#{bodyType},</if>
            <if test="productionStatus != null">#{productionStatus},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateCarModel" parameterType="CarModel">
        update tb_car_model
        <trim prefix="SET" suffixOverrides=",">
            <if test="brandId != null">brand_id = #{brandId},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="sortOrder != null">sort_order = #{sortOrder},</if>
            <if test="bodyType != null">body_type = #{bodyType},</if>
            <if test="productionStatus != null">production_status = #{productionStatus},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCarModelById" parameterType="Long">
        delete from tb_car_model where id = #{id}
    </delete>

    <delete id="deleteCarModelByIds" parameterType="String">
        delete from tb_car_model where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>